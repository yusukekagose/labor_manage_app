<% if flash[:alert] %>
<%= js add_gritter(flash[:alert], title: "Overtime App Notification", sticky: false, image: :notice) %>
<% elsif flash[:error] %>
<%= js add_gritter(flash[:error], title: "Overtime App Notification", sticky: false, image: :notice) %>
<% else flash[:notice] %>
<%= js add_gritter(flash[:notice], title: "Overtime App Notification", sticky: false, image: :notice) %>
<% end %>